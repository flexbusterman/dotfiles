{
  "prettier.semi": false,
  "suggest.noselect": false,
  "coc.preferences.snippets.enable": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "markdown",
    "vue",
    "js",
    "wiki",
    "json",
    "md",
    "sc",
    "scd"
  ],

  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        "*.cabal",
        "stack.yaml",
        "cabal.project",
        "package.yaml",
        "hie.yaml"
      ],
      "filetypes": ["haskell", "lhaskell"]
    }
  }
}
