#!/usr/bin/env bash

if [[ $XDG_SESSION_TYPE == "wayland" ]]; then
answer=$(echo -e "yes\nno" | dmenu-wl --font-name "BigBlueTerm437 Nerd Font Mono 10" -p "Quit River?")
else
answer=$(echo -e "yes\nno" | dmenu -p "Quit River?")
fi

if [[ $answer == "yes" ]]; then
riverctl exit
else
	echo "Not quitting River"
fi
