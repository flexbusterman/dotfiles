#!/bin/bash
cd ~/Dropbox/SUPERCOLLIDER/;
nvim "$(command ls -ltr ~/Dropbox/SUPERCOLLIDER/ | awk '/20[0-9]{2}/{print}' | tail -n 1 | sed 's/^[^:]*:[^ ]* //g')" -c "set filetype=supercollider | let wid = win_getid() | vsplit fieldsteel startup.scd | split synths.scd | call win_gotoid(wid) | SCNvimStart"
