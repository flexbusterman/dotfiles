#!/bin/sh

st -t Server -e zsh -c "cd ~/.local/src/$1; npm run dev" &
sleep 0.2 && st -t Git -e zsh -c "cd ~/.local/src/$1; zsh" &
notefile=$(find ~/Dropbox/NOTES/ -maxdepth 1 -type f -iname "*$1*")
st -t Notes -e zsh -c "cd ~/Dropbox/NOTES/; nvim $notefile" &
sleep 0.5 && brave --new-window http://localhost:3333 &
sleep 2 && st -e zsh -c "cd ~/.local/src/$1; nvim" &
