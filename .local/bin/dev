#!/bin/sh
if [ $1 == "mind" ]; then
	st -t Server -e zsh -c "cd ~/.local/src/$1; source /usr/share/nvm/init-nvm.sh; nvm use 14.16.0; npm run dev" &
else
	st -t Server -e zsh -c "cd ~/.local/src/$1; npm run dev" &
fi
st -t Timer -e zsh -c "termdown --no-figlet" &
sleep 0.2 && st -t Git -e zsh -c "cd ~/.local/src/$1; zsh" &
notefile=$(find ~/Dropbox/NOTES/ -maxdepth 1 -type f -iname "*$1*")
st -t Notes -e zsh -c "cd ~/Dropbox/NOTES/; nvim $notefile" &
sleep 0.5 && brave --new-window http://localhost:3000 &
sleep 2 && st -e zsh -c "cd ~/.local/src/$1; nvim -c \"e .\"" &
