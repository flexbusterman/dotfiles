#!/bin/bash

USER=$(whoami)

if [ ! -d "/home/$USER/.worktime" ]; then
	# echo "Directory doesn't exist, creating"
	mkdir -p /home/$USER/.worktime
fi

cd /home/$USER/.worktime

WORK=$(ls -t | dmenu -i -l 10 -p "What work?")

if [[ ! -f $WORK ]]; then
	echo "$WORK doesn't exist, creating."
	touch $WORK
fi

