#!/bin/bash
swayidle -w \
  timeout 1800 'waylock' \
  timeout 3600 'for output in $(wlr-randr | awk '\''/^[^[:space:]]/ {print $1}'\''); do wlr-randr --output $output --off; done' \
    resume 'for output in $(wlr-randr | awk '\''/^[^[:space:]]/ {print $1}'\''); do wlr-randr --output $output --on; done' \
  before-sleep 'waylock'
