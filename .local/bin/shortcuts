#!/bin/bash
# This script is used to create a shortcut to a file and open in nvim
cd /home/$USER/
file=$(cat /home/$USER/Dropbox/NOTES/Shortcuts.md | fzf)
if [ -n "$file" ]; then
  cd "$(dirname $file)"
  nvim "$file"
else
  file="$(fzf)"
  if [ -n "$file" ]; then
    echo "/home/$USER/$file" >> /home/$USER/Dropbox/NOTES/Shortcuts.md
    cd "$(dirname $file)"
    nvim "$file"
  else
    echo "No file selected"
    exit 1
  fi
fi
