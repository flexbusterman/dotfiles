#!/usr/bin/env bash
# This script is used to create a shortcut to a file and open in nvim

cd /home/$USER/
file=$(cat /home/$USER/.config/shell/shortcuts | fzf)
if [ -n "$file" ]; then
	DIR="$(dirname "$file")"
  cd $DIR
	if [ $DIR != /home/$USER ]; then
    SUDO_ASKPASS=~/.local/bin/dmenupass sudo -A nvim "$file"
	else
		nvim "$file"
	fi
else
	exit 1
fi

