#!/bin/bash

filetype=$(file --mime-type -b "$@")
notify-send $filetype
case "$filetype" in
	image/*)
		sxivopen "$@"
		;;
	video/*)
		mpv --save-watch-history "$@"
		;;
	audio/*)
		mpc --host /run/user/1000/mpd/socket clear
		musicadd "$@"
		;;
	application/vnd.openxmlformats-officedocument.spreadsheetml.sheet)
		kitty -e sc-im "$@" > /dev/null 2>&1 & disown
		;;
	application/vnd.oasis.opendocument.spreadsheet)
		libreoffice "$@"
		;;
	application/vnd.openxmlformats-officedocument.wordprocessingml.document)
		libreoffice "$@"
		;;
	application/x-sc)
		kitty -e sc-im "$@" > /dev/null 2>&1 & disown
		;;
	application/x-nes-rom)
		mednafen "$@"
		;;
	application/x-dosexec)
		dosbox "$@"
		;;
	application/pdf)
		zathura "$@"
		;;
	application/zip)
		/var/lib/flatpak/app/com.bitwig.BitwigStudio/current/active/files/bitwig-studio "$@"
		;;
	application/octet-stream)
		case "${1##*.}" in
			doc | docx | xls | xlsx | odt | ppt | pptx)
				libreoffice "$@"
				;;
			nfo)
				kitty -e nvim "$@" > /dev/null 2>&1 & disown
				;;
			ahx | hes)
				mpc --host /run/user/1000/mpd/socket clear
				musicadd "$@"
				;;
			7z | ace | gz | jar | rar | shar | tar | tgz | xar | xz | zip)
				for file in "$@"; do
					7z x -y "$file" -o"${file%.*}"
				done
				;;
			smc)
				snes9x-gtk "$file"
				;;
			*)
				notify-send "${1##*.}"
				;;
		esac
		;;
	text/html)
		qutebrowser "$@"
		;;
	*)
		case "${1##*.}" in
			rpp | RPP)
				reaper "$@"
				;;
			org | ORG)
				cd ~/ORGMODE/
				kitty -e nvim "$@" > /dev/null 2>&1 & disown
				;;
			exe | EXE)
				wine "$@"
				;;
			7z | ace | gz | jar | rar | shar | tar | tgz | xar | xz | zip)
				for file in "$@"; do
					7z x -y "$file" -o"${file%.*}"
				done
				;;
			*)
				# start files in separate tabs in nvim
				kitty -e nvim "$@" > /dev/null 2>&1 & disown
				;;
		esac
		;;
esac
