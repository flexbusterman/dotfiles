#!/bin/bash

filetype=$(file --mime-type -b "$@")
notify-send $filetype
case "$filetype" in
	image/*)
		sxivopen "$@"
		;;
	video/*)
		mpv "$@"
		;;
	audio/*)
		mpc --host ~/.mpd/socket clear
		musicadd "$@"
		;;
	application/vnd.openxmlformats-officedocument.spreadsheetml.sheet)
		st -e sc-im "$@"
		;;
	application/x-sc)
		st -e sc-im "$@"
		;;
	application/pdf)
		zathura "$@"
		;;
	application/octet-stream)
		case "${1##*.}" in
			doc|docx|xls|xlsx|odt|ppt|pptx)
				libreoffice "$@"
				;;
			ahx|hes)
				mpc --host ~/.mpd/socket clear
				musicadd "$@"
				;;
			*)
				notify-send "${1##*.}"
				;;
		esac
		;;
	text/html)
		qutebrowser "$@"
		;;
	*)
		case "${1##*.}" in
			rpp|RPP)
				reaper "$@"
				;;
			*)
				# start files in separate tabs in nvim
				st -e nvim -O "$@"
				;;
		esac
		;;
esac
