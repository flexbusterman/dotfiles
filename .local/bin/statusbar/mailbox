# unread="$(find "${XDG_DATA_HOME:-$HOME/.local/share}"/mail/*/[Ii][Nn][Bb][Oo][Xx]/new/* -type f | wc -l 2>/dev/null)"

# pidof mbsync >/dev/null 2>&1 && icon="ðŸ”ƒ"

# [ "$unread" = "0" ] && [ "$icon" = "" ] || echo "ðŸ“¬$unread$icon"

case $BLOCK_BUTTON in
	1) setsid "$TERMINAL" -e neomutt & ;;
	2) setsid mailsync >/dev/null & ;;
	3) notify-send "ðŸ“¬ Mail module" "\- Shows unread mail
- Shows ðŸ”ƒ if syncing mail
- Left click opens neomutt
- Middle click syncs mail" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

unread1="$(find "${XDG_DATA_HOME:-$HOME/.local/share}"/mail/gen*/[Ii][Nn][Bb][Oo][Xx]/new/* -type f | wc -l 2>/dev/null)"
unread2="$(find "${XDG_DATA_HOME:-$HOME/.local/share}"/mail/chr*/[Ii][Nn][Bb][Oo][Xx]/new/* -type f | wc -l 2>/dev/null)"
unread3="$(find "${XDG_DATA_HOME:-$HOME/.local/share}"/mail/aug*/[Ii][Nn][Bb][Oo][Xx]/new/* -type f | wc -l 2>/dev/null)"
# only displays if there is unread 
# [ "$unread" = "0" ] || echo " M $unread "

echo "$unread1 $unread2 $unread3"
