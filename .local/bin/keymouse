#!/usr/bin/env bash
pgrep unclutter && unclutterWasRunning=true
if [[ $unclutterWasRunning == true ]]; then
	echo "Killing unclutter"
	pkill unclutter
fi

xdotool mousemove_relative +1 0
find-cursor --color cyan --wait 200 --line-width 1
xmouseless

if [[ $unclutterWasRunning == true ]]; then
	echo "Restarting unclutter"
	unclutter --timeout 1 &
	disown
fi
