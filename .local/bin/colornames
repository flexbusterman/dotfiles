#!/usr/bin/env bash

ESC="\033["
RESET="${ESC}0m"

# Normal foreground colors
FG_BLACK="${ESC}30m"
FG_RED="${ESC}31m"
FG_GREEN="${ESC}32m"
FG_YELLOW="${ESC}33m"
FG_BLUE="${ESC}34m"
FG_MAGENTA="${ESC}35m"
FG_CYAN="${ESC}36m"
FG_WHITE="${ESC}37m"

# Bright foreground colors
FG_BRIGHT_BLACK="${ESC}90m"
FG_BRIGHT_RED="${ESC}91m"
FG_BRIGHT_GREEN="${ESC}92m"
FG_BRIGHT_YELLOW="${ESC}93m"
FG_BRIGHT_BLUE="${ESC}94m"
FG_BRIGHT_MAGENTA="${ESC}95m"
FG_BRIGHT_CYAN="${ESC}96m"
FG_BRIGHT_WHITE="${ESC}97m"

print_fg() {
    local name="$1"
    local value=$(eval echo "\${FG_${name}}")
    echo -e "${value}${name}${RESET}"
}

print_all_colors() {
    local normal=(BLACK RED GREEN YELLOW BLUE MAGENTA CYAN WHITE)
    local bright=(BRIGHT_BLACK BRIGHT_RED BRIGHT_GREEN BRIGHT_YELLOW BRIGHT_BLUE BRIGHT_MAGENTA BRIGHT_CYAN BRIGHT_WHITE)

    echo "Normal colors:"
    for n in "${normal[@]}"; do
        print_fg "$n"
    done

    echo ""
    echo "Bright colors:"
    for b in "${bright[@]}"; do
        print_fg "$b"
    done
}

print_all_colors
